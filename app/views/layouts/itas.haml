!!! XML
!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    = javascript_include_tag :defaults
    = stylesheet_link_tag "itas"
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %title ITAS Library
  %body
    #non-footer
      #search-form
        %table{ :width => "100%"}
          %tbody
            %tr
              %td
                #logo
                  %a{ :href => "#{url_for(:action => "index")}"}
                    = image_tag("itas-logo.gif", :alt => "ITAS Logo")
              %td{ :align => "right", :valign => "bottom" }
                #search-container
                  = render(:partial => "simple_search")
      = yield
    #footer
      %p
        = link_to "ITAS", "http://itas-uni.eu"
        Library -
        = link_to "Disclaimer", "http://itas-uni.eu/EN/Impressum/impressum.htm"
        \- Contact:
        = link_to "library@itas-uni.eu", "mailto:library@itas-uni.eu"
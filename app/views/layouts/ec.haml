!!! XML
!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    = javascript_include_tag "jquery-1.4.min.js", "jquery-ui-1.7.2.custom.min.js", "jquery.ba-bbq.min.js", "application"
    = stylesheet_link_tag "ec", "jquery-ui-1.7.2.custom.css"
    %link{:rel => "shortcut icon", :href => "/favicon.ico"}
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %title Europe Center Library
  %body
    #mainpage
      #frame
        #header
          %a{ :id => "logo", :href => "http://www.europe-center.org/" }
          %a{ :id => "dwblogo", :href => "http://www.diamondway-buddhism.org/" }
          - form_tag( { :action => "index" }, :method => "get", :id => "search_form" ) do
            %label Search:
            = text_field_tag :search, params[:search], :class => "search"
            = image_submit_tag "../images/ec-butt-go.gif", :style => "vertical-align: bottom;", :id => "search_button"
        #content
          #left
            %b
              COLLECTIONS
            %ul
              %li{:name => "all"}
                = link_to "All books", {}, :class => "category"
              %li{:name => "intro"}
                = link_to "Introduction", { :keywords => "Introduction to Buddhism" }, :class => "category"
              %li{:name => "ngondro"}
                = link_to "Foundational Practices", { :keywords => "Ngondro" }, :class => "category"
              %li{:name => "essential"}
                = link_to "Must reads", { :keywords => ['Essential', 'Diamond Way'] }, :class => "category"
              %li{:name => "bio"}
                = link_to "Life Stories", { :keywords => "Biography" }, :class => "category"
              %li{:name => "mahamudra"}
                = link_to "The Great Seal", { :keywords => "Mahamudra" }, :class => "category"
              %li{:name => "kagyu"}
                = link_to "Karma Kagy&uuml;", { :keywords => "Kagyu" }, :class => "category"
              %li{:name => "nyinmga"}
                = link_to "Nyingma", { :keywords => "Nyingma" }, :class => "category"
          #right
            = yield
      #push
    #footer
      %a{ :href => "http://www.europe-center.org/" } Home
      |
      %a{ :href => "http://www.europe-center.org/about/the-europe-center/" } About
      |
      %a{ :href => "http://www.europe-center.org/" } Feedback
      %span#footercopyright
        %a{ :href => "http://www.diamondway-buddhism.org/" } &copy; 2009 Diamond Way Buddhism
